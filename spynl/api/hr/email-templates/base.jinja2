<!DOCTYPE HTML>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  </head>
  <body style="font: 14px/1.4285714 Arial, sans-serif; color: #333;">
    <table style="width: 100%; border-collapse: collapse;">
      <tbody>
        <tr>
          <td style="background: #f5f5f5; padding: 10px 10px 0; font: 14px/1.4285714 Arial, sans-serif;">
            <table style="width: 100%; border-collapse: collapse;">
              <tbody>
                <tr>
                  <td id="main" class="content-container  has-parent" style="font: 14px/1.4285714 Arial, sans-serif; padding: 0; background-color: #ffffff; border-radius: 5px">
                    <div style="border: none; border-radius: 5px; padding: 0; background: #f5f5f5">
                      <table style="width: 100%; border-collapse: collapse">
                        <tbody>
                          <tr>
                            <td class="main-content" style="font: 14px/1.4285714 Arial, sans-serif; padding: 0">
                              <div style="border: 1px solid #ccc; border-radius: 5px; background-color: #ffffff; padding: 40px">
                                <table style="width: 100%; border-collapse: collapse">
                                  <tbody>
                                    <tr>
                                      <td class="content" style="font: 14px/1.4285714 Arial, sans-serif; padding: 0">
                                        <table style="width: 100%; border-collapse: collapse">
                                          <tbody>
                                            <tr>
                                              <td class="content-main" style="font: 14px/1.4285714 Arial, sans-serif; padding: 0 0 0 10px">
                                                <table style="width: 100%; border-collapse: collapse">
                                                  <tbody>
                                                     {%- if softwear_logo or tenant_logo_url(request) -%} 
                                                       <tr>
                                                         <td align="center" style="padding: 0px 0 40px 0; background-color: #ffffff;">
                                                           <!-- Header -->
                                                           <p>
                                                             {% if softwear_logo %}
                                                               <a href="https://www.softwearconnect.com" style="color: #3572b0; text-decoration: none;">
                                                                 <img width="256" height="71" src="https://s3-eu-west-1.amazonaws.com/softwear-static-assets/SoftwearLogo.png" alt="Softwear" style="border-style: none;"/>
                                                               {% else %}
                                                                 <img src="{{tenant_logo_url(request)}}" alt="Sent by Softwear BV" />
                                                               {% endif %}
                                                           </p>
                                                         </td>
                                                       </tr>
                                                     {%- endif -%}
                                                    <tr>
                                                      <td class="content-user" style="font: 14px/1.4285714 Arial, sans-serif; padding: 0; line-height: 1.25">
                                                        {% block content %}{% endblock %}
                                                        {%- if content_string -%}
                                                          {%- for line in content_string.split('\n') -%}
                                                            <p>{%- if line.startswith('http') -%}<a href="{{line}}">{{line}}</a>{%- else -%}{{line}}{%- endif -%}</p>
                                                          {%- endfor -%}
                                                        {%- endif -%}
                                                      </td>
                                                    </tr>
                                                  </tbody>
                                                </table>
                                              </td>
                                            </tr>
                                          </tbody>
                                        </table>
                                      </td>
                                    </tr>
                                  </tbody>
                                </table>
                              </div>
                            </td>
                          </tr>
                        </tbody>
                      </table>
                    </div>
                  </td>
                </tr>
                <tr>
                  <td style="padding: 20px 0; color: #707070;">
                    <table style="width: 100%; border-collapse: collapse;">
                      <tbody>
                        <tr>
                          <td style="text-align: right; width: 100px; padding: 0">
                            <a href="https://www.softwearconnect.com" style="color: #3572b0; text-decoration: none;">
                            <img width="180" height="32" src="https://s3-eu-west-1.amazonaws.com/softwear-static-assets/SoftwearPoweredBy.png" alt="Softwear" style="border-style: none;"/>
                            </a>
                          </td>
                        </tr>
                      </tbody>
                    </table>
                  </td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>
      </tbody>
    </table>
  </body>
</html>

